<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:viewBindingIgnore="true"
        tools:context=".TimerMinutes"
        android:orientation="vertical">

    <TextView
            android:text="Сколько минут ты хочешь медитировать?"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/howMany"
            android:textColor="#269"
            android:textSize="24sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="242dp"/>

    <SeekBar
            android:id="@+id/chooseMinutes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="50dp"
            android:max="30"
            android:min="0"/>
    <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/minutes"
            android:textColor="#269"
            android:textSize="24sp"
            android:gravity="center"
            android:layout_gravity="center"
    />
    <Button
            android:text="Начать"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/start"
            android:textSize="24sp"
            android:backgroundTint="#269"
            android:layout_gravity="center"/>

    <com.michaldrabik.tapbarmenulib.TapBarMenu
            android:id="@+id/tapBarMenu"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="120dp"
            app:tbm_backgroundColor="#91381C">

        <ImageView
                android:id="@+id/home"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:src="@drawable/ic_home"/>


        <ImageView
                android:id="@+id/timer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:src="@drawable/ic_timer"/>
        <Space
                android:layout_width="56dp"
                android:layout_height="match_parent"
        />

        <ImageView
                android:id="@+id/breath"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:src="@drawable/ic_478"/>


        <ImageView
                android:id="@+id/notes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:src="@drawable/ic_notes"/>

    </com.michaldrabik.tapbarmenulib.TapBarMenu>

</LinearLayout>
