<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:viewBindingIgnore="true"
        tools:context=".FourSevenEightDescription"
        android:orientation="vertical">

    <TextView
            android:text="Закройте губы и вдохните через нос на счет четыре.
            Задержите дыхание на счет семь.
            Выдохните полностью через рот на счет восемь. Для этого упражнения доступен секундомер."
            android:layout_width="395dp"
            android:layout_height="wrap_content" android:id="@+id/desc"
            android:layout_marginTop="152dp" android:textSize="24sp" android:layout_gravity="center"
            android:gravity="center"/>

    <Button
            android:text="Начать"
            android:textSize="20sp"
            android:layout_width="128dp"
            android:layout_height="77dp"
            android:id="@+id/start"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:backgroundTint="#269"/>

    <com.michaldrabik.tapbarmenulib.TapBarMenu
            android:id="@+id/tapBarMenu"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="190dp"
            app:tbm_backgroundColor="#91381C">

        <ImageView
                android:id="@+id/home"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:src="@drawable/ic_home"/>


        <ImageView
                android:id="@+id/timer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:src="@drawable/ic_timer"/>
        <Space
                android:layout_width="56dp"
                android:layout_height="match_parent"
        />

        <ImageView
                android:id="@+id/breath"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:src="@drawable/ic_478"/>


        <ImageView
                android:id="@+id/notes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:src="@drawable/ic_notes"/>

    </com.michaldrabik.tapbarmenulib.TapBarMenu>

</LinearLayout>